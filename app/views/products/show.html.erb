<div class="card-detail">

  <h2><%= @product.name %></h2>
  <h3>$<%= @product.price %></h3>
  <h5>Description:</h5>
  <p><%= @product.description %>
  <h5>Comments:</h5><hr>
  <% @product.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p>by - <%= comment.author %> <% if @current_user.admin %><%= link_to "Edit", edit_product_comment_path(@product, comment), class: "yellowbox" %><%= link_to "Delete", product_comment_path(@product, comment), class: "yellowbox",
      :data => {:confirm => "Are you sure you want to delete this product?",
                :method => "delete"} %></p><% end %><hr>
  <% end %>
  <div class="button-container">
    <p><%= link_to "Add Comment", new_product_comment_path(@product), class: "yellowbox" %>
      <% if @current_user.admin %>
        <%= link_to "Edit Product", edit_product_path(@product), class: "yellowbox" %> <%= link_to "Delete Product", product_path(@product), class: "yellowbox",
          :data => {:confirm => "Are you sure you want to delete this product?",
                    :method => "delete"} %></p>
      <% end %>
  </div>
</div>
